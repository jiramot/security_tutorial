extends layout

block content
    div.text-center
        form(class="form-signin" method="POST" action="/transfer")
            #error
                if error
                    p.text-danger Error!!!

            - var h1Classes = ['h3', 'mb-3', 'font-weight-normal']
            h1(class=h1Classes) Transfer Money

            label( for="amount" class="sr-only") amount
            input(type="number" name="amount" id="amount" class="form-control" placeholder="amount" required autofocus)

            //-input password
            label(for="account" class="sr-only") account
            input(type="text" name="account" id="account" class="form-control" placeholder="account" required)


            //-signIn button
            - var buttonClass=['btn', 'btn-lg', 'btn-primary', 'btn-block'];
            button(class=buttonClass type="submit") Transfer

            - var pClasses=['mt-5', 'mb-3', 'text-muted'];
